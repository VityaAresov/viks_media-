<header class="topbar">
  <div class="topbar-inner">
    <a class="wordmark" href="/">VIKS MEDIA</a>
    <div class="topbar-spacer"></div>
    <div class="topbar-actions">
      <a class="icon-btn" href="/search" aria-label="Search">
        <span>⌕</span>
      </a>
      <% if (currentUser) { %>
      <a class="pill-btn pill-ghost" href="<%= currentUser.email_verified ? '/posts/new' : '/account' %>">
        <span class="pill-icon">✎</span>
        <span>Write</span>
      </a>
      <a class="pill-btn pill-user" href="/account">@<%= currentUser.username %></a>
      <form method="post" action="/logout">
        <button class="pill-btn pill-primary" type="submit">Log out</button>
      </form>
      <% } else { %>
      <a class="pill-btn pill-ghost" href="/login">
        <span class="pill-icon">✎</span>
        <span>Write</span>
      </a>
      <a class="pill-btn pill-primary" href="/login">Log in</a>
      <% } %>
    </div>
  </div>
</header>
